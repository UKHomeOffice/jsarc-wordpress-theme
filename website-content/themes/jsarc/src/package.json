{
	"name": "jsarc",
	"description": "A wordpress theme for the JSARC website",
	"repository": "https://github.com/6point6/jsarc",
	"licence": "",
	"version": "1.0.0",
	"scripts": {
		"watch:css": "onchange './sass/**/*.scss' -- npm run build:css",
		"build:css": "npm-run-all sass autoprefixer comb stylelint",
		"sass": "node-sass --include-path scss sass/style.scss ../style.css --output-style=expanded --indent-type=tab --indent-width=1",
		"sass-watch": "node-sass --include-path scss sass/style.scss ../style.css --output-style=expanded --indent-type=spaces --indent-width=4 --watch",
		"autoprefixer": "postcss ../style.css -u autoprefixer -o ../style.css --no-map",
		"comb": "csscomb ../style.css",
		"hint": "hint",
		"stylelint": "stylelint '../style.css'",
		"stylefix": "stylelint '../style.css' --fix"
	},
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.22.20",
    "@babel/register": "^7.22.15",
    "@hint/configuration-web-recommended": "^8.2.23",
    "autoprefixer": "^10.4.16",
    "babel-core": "^6.26.3",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-register": "^6.26.0",
    "beeper": "^3.0.0",
    "browser-sync": "^2.29.3",
    "browserslist": "^4.22",
    "csscomb": "^4.3.0",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-csscomb": "^3.1.0",
    "gulp-notify": "^4.0.0",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-prettier": "^5.0.0",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.1.0",
    "gulp-size": "^4.0.1",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-stylefmt": "^1.1.0",
    "gulp-stylelint": "^13.0.0",
    "hint": "^7.1.10",
    "npm-run-all": "^4.1.5",
    "onchange": "^7.1.0",
    "postcss-cli": "^10.1.0",
    "postcss-sorting": "^8.0.2",
    "stylelint": "^15.10.3",
    "stylelint-config-standard": "^34.0.0",
    "stylelint-config-wordpress": "^17.0.0",
    "stylelint-no-unsupported-browser-features": "^7.0.0",
    "stylelint-order": "^6.0.3"
  },
  "browserslist": [
    "last 2 versions",
    "> 1%"
  ],
  "dependencies": {
    "@babel/polyfill": "^7.0.0",
    "node-sass": "^9.0.0",
    "postcss": "^8.0.0"
  }
}
