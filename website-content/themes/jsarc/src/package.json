{
	"name": "jsarc",
	"description": "A wordpress theme for the JSARC website",
	"repository": "https://github.com/6point6/jsarc",
	"licence": "",
	"version": "1.0.0",
	"scripts": {
		"watch:css": "onchange './sass/**/*.scss' -- npm run build:css",
		"build:css": "npm-run-all sass autoprefixer comb stylelint",
		"sass": "node-sass --include-path scss sass/style.scss ../style.css --output-style=expanded --indent-type=tab --indent-width=1",
		"sass-watch": "node-sass --include-path scss sass/style.scss ../style.css --output-style=expanded --indent-type=spaces --indent-width=4 --watch",
		"autoprefixer": "postcss ../style.css -u autoprefixer -o ../style.css --no-map",
		"comb": "csscomb ../style.css",
		"hint": "hint",
		"stylelint": "stylelint '../style.css'",
		"stylefix": "stylelint '../style.css' --fix"
	},
	"devDependencies": {
		"@babel/core": "^7.1.0",
		"@babel/preset-env": "^7.1.0",
		"@babel/register": "^7.0.0",
		"@hint/configuration-web-recommended": "^1.2.0",
		"autoprefixer": "^7.1.1",
		"babel-core": "^6.26.3",
		"babel-polyfill": "^6.26.0",
		"babel-preset-env": "^1.7.0",
		"babel-preset-es2015": "^6.24.1",
		"babel-register": "^6.26.0",
		"beeper": "^1.1.1",
		"browser-sync": "^2.24.7",
		"browserslist": "^3.0",
		"csscomb": "^4.2.0",
		"gulp": "^4.0.0",
		"gulp-babel": "^8.0.0-beta.2",
		"gulp-csscomb": "^3.0.8",
		"gulp-notify": "^3.2.0",
		"gulp-plumber": "^1.2.0",
		"gulp-postcss": "^8.0.0",
		"gulp-prettier": "^2.0.0",
		"gulp-rename": "^1.4.0",
		"gulp-sass": "^4.0.1",
		"gulp-size": "^3.0.0",
		"gulp-sourcemaps": "^2.6.4",
		"gulp-stylefmt": "^1.1.0",
		"gulp-stylelint": "^7.0.0",
		"hint": "^3.4.3",
		"node-sass": "^4.5.3",
		"npm-run-all": "^4.1.3",
		"onchange": "^4.1.0",
		"postcss-cli": "^4.1.0",
		"postcss-sorting": "^4.0.0",
		"stylelint": "^15.10.1",
		"stylelint-config-standard": "^18.2.0",
		"stylelint-config-wordpress": "^13.1.0",
		"stylelint-no-unsupported-browser-features": "^3.0.1",
		"stylelint-order": "^1.0.0"
	},
	"browserslist": [
		"last 2 versions",
		"> 1%"
	],
	"dependencies": {
		"@babel/polyfill": "^7.0.0"
	}
}
